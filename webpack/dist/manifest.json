{
    "name": "HulkApps-Metafields-Extended",
    "description": "Extends the default HulkApps-Metafields Shopify App",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "*://*.myshopify.com/*",
        "identity",
        "storage"
    ],
    "background": {
        "service-worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.myshopify.com/admin/products/*"],
            "js": ["build/content_script.js"],
            "run_at": "document_end"
        }
    ]
}